<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slots_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/slots_container_inner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="10dp"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <include
                android:id="@+id/slot_0"
                layout="@layout/row_slot_item" />

            <include
                android:id="@+id/slot_2"
                layout="@layout/row_slot_item" />

            <include
                android:id="@+id/slot_4"
                layout="@layout/row_slot_item" />

            <include
                android:id="@+id/slot_6"
                layout="@layout/row_slot_item" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <include
                android:id="@+id/slot_1"
                layout="@layout/row_slot_item" />

            <include
                android:id="@+id/slot_3"
                layout="@layout/row_slot_item" />

            <include
                android:id="@+id/slot_5"
                layout="@layout/row_slot_item" />

            <include
                android:id="@+id/slot_7"
                layout="@layout/row_slot_item" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>