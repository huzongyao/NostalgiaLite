<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/row_select_server_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_tablet" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/row_select_server_label1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dialog_main_color"
            android:textSize="20sp"
            tools:text="Samsung Nexus S" />

        <TextView
            android:id="@+id/row_select_server_label2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dialog_main_color"
            tools:text="Super Mario" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:src="@drawable/ic_next" />

</LinearLayout>