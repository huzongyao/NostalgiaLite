<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/game_dialog_bck"
        android:orientation="vertical"
        android:padding="35dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dialog_select_server_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/dialog_select_port_title"
                android:textColor="@color/dialog_main_color"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_margin="5dp"
            android:background="@color/dialog_main_color" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/dialog_select_port_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_port_selector"
                android:text="1"
                android:textColor="@color/dialog_main_color"
                android:textSize="25sp" />

            <Button
                android:id="@+id/dialog_select_port_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_port_selector"
                android:text="2"
                android:textColor="@color/dialog_main_color"
                android:textSize="25sp" />

            <Button
                android:id="@+id/dialog_select_port_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_port_selector"
                android:text="3"
                android:textColor="@color/dialog_main_color"
                android:textSize="25sp" />

            <Button
                android:id="@+id/dialog_select_port_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_port_selector"
                android:text="4"
                android:textColor="@color/dialog_main_color"
                android:textSize="25sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>